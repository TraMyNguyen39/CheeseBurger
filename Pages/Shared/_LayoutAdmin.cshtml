<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewData["Title"] - CheeseBurger</title>
	<link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/js/bootstrap.min.js" asp-append-version="true" />
	<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
	<link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/layout-admin.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/manage-user.css" asp-append-version="true" />
</head>
<body>
	<header class="header">
		<div class="container-fluid">
			<nav class="header__navbar">
				<a asp-page="User/HomePage" class="logo-link">
					<img src="~/img/logo_black.png" alt="abc" class="logo-server" style="height: 50px">
				</a>
				<a asp-page="" class="header__navbar-admin">AdminHub</a>
				<a asp-page="">
				</a>
			</nav>
		</div>
	</header>
	<div class="background">
		<div class="main__form-detail">
			<div class="main__sliderbar">
				<div class="account">
					<img class="account-avt" src="~/img/avt.png" />
					<div class="account-detail categories__item">
						<p class="account-name">
							@{
								var name = Context.Session.GetString("Name");
								@name
								;
							}
						</p>
						<p class="account-role">
							@{
								var role = Context.Session.GetString("Role");
								@role
								;
							}
						</p>
					</div>
				</div>
				<ul class="categories__list">
					<li class="categories__item" id="revenue">
						<a class="nav-link " asp-page="/Admin/SyncRevenue">
							<i class="fas fa-tachometer-alt fa-fw me-3"></i><span>Thống kê doanh thu</span>
						</a>
					</li>
					<li class="categories__item" id="own-account">
						<a class="nav-link" asp-page="/Admin/ManageAccount">  
							<i class="fas fa-solid fa-user"></i><span>Quản lý tài khoản</span>
						</a>
					</li>
					<li class="categories__item" id="customer">
						<a class="nav-link" asp-page="/Admin/ManageUser">
							<i class="fas fa-users fa-fw me-3"></i><span>Quản lý khách hàng</span>
						</a>
					</li>
					<li class="categories__item " id="staff">
						<a class="nav-link" asp-page="/Admin/ManageStaff">
							<i class="fas fa-building fa-fw me-3"></i><span>Quản lý nhân viên</span>
						</a>
					</li>
					<li class="categories__item " id="ingredient">
						<a class="nav-link" asp-page="/Admin/ManageIngredient"> 
							<i class="fa-solid fa-lemon"></i><span>Quản lý nguyên liệu</span>
						</a>
					</li>
					<li class="categories__item " id="category">
						<a class="nav-link" asp-page="/Admin/ManageCategories">
							<i class="fas fa-calendar fa-fw me-3"></i><span>Quản lý danh mục</span>
						</a>
					</li>
					<li class="categories__item " id="food">
						<a class="nav-link" asp-page="/Admin/ManageFood">
							<i class="fa-solid fa-burger"></i><span>Quản lý món ăn</span>
						</a>
					</li>
					<li class="categories__item " id="order">
						<a href="#submenu2" data-toggle="collapse" aria-expanded="false" class="list-group-item list-group-item-action nav-link">
							<div class="d-flex w-100 justify-content-start align-items-center">
								<i class="fas fa-chart-bar fa-fw me-3"></i><span>Quản lý đơn hàng</span>
							</div>
						</a>
						<!-- Submenu content -->
						<div id='submenu2' class="collapse sidebar-submenu">
							<a asp-page="/Admin/ManageImportOrder" class="list-group-item list-group-item-action nav-link nav-link-edit">
								<i class="fa-solid fa-angle-right"></i>
								<span class="menu-collapsed">Quản lý đơn nhập</span>
							</a>
							<a asp-page="/Admin/ManageExportOrder" class="list-group-item list-group-item-action nav-link nav-link-edit">
								<i class="fa-solid fa-angle-right"></i>
								<span class="menu-collapsed">Quản lý đơn xuất</span>
							</a>
						</div>
					</li>
				</ul>
				<ul class="categories__button">
					<li class="categories__item-button">
						<a class="nav-link" asp-page="/Login/LoginRegister" asp-page-handler="Logout">
							<i class="fas fa-right-from-bracket"></i>Đăng xuất
						</a>
					</li>
				</ul>
			</div>
			<div style="width: 20%"></div>
			@RenderBody()
		</div>
	</div>
	@await RenderSectionAsync("Scripts", required: false)
	<script src="~/js/sidebar.js"></script>
</body>
</html>