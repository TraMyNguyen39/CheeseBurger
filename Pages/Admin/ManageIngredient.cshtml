@page
@model ManageIngredientModel
@{
    ViewData["Title"] = "ManageIngredient";
}
<link rel="stylesheet" href="~/css/manage-ingredient.css" asp-append-version="true" />
<body>
    <main>
        <div class="main__form-detail">
            <div class="main__sliderbar col-2">
                <ul class="categories__list">
                    <li class="categories__item">
                        <a class="nav-link" href="~/Admin/ManageAccount"> Quản lý tài khoản</a>
                    </li>
                    <li class="categories__item">
                        <a class="nav-link" href="~/Admin/ManageUser">  Quản lý người dùng</a>
                    </li>
                    <li class="categories__item active">
                        <a class="nav-link" href="~/Admin/ManageIngredient">  Quản lý nguyên liệu</a>
                    </li>
                    <li class="categories__item">
                        <a class="nav-link" href="~/Admin/ManageCategories">   Quản lý danh mục</a>
                    </li>
                    <li class="categories__item">
                        <a class="nav-link" href="~/Admin/ManageOrder">   Quản lý đơn hàng</a>
                    </li>
                    <li class="categories__item ">
                        <a class="nav-link" href="~/Admin/ManageFood">   Quản lý món ăn</a>
                    </li>
                    <li class="categories__item ">
                        <a class="nav-link" href="~/Admin/SyncRevenue">   Thống kê doanh thu</a>
                    </li>
                </ul>
                <ul class="categories__button">
                    <li class="categories__item-button">
                        <img src="~/img/Logout.png" alt="" style="height:30px">
                        <a class="nav-link" href="#"> Đăng xuất</a>
                    </li>
                </ul>
            </div>
            <div class="blank_area col-1"></div>
            <div class="main__information col-9">
                <div class="main__information-detail">
                    <div class="main__information-add d-flex justify-content-end align-items-center">
                        <div class="button__add"><button class="" type="submit">Thêm nguyên liệu</button></div>
                        <i class="fas fa-plus"></i>
                    </div>
                    <div class="main__table-form">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">Sắp xếp: </label>
                                <div class="form__comboBox">
                                    <form action="dropList" method="post">
                                        <select name="combobox_Item">
                                            <option value="" selected>Tên từ A-Z</option>
                                            <option value="">Tên từ Z-A</option>
                                        </select>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                        </div>
                        <div class="blank_area col-md-1"></div>
                        <div class="col-md-5 d-flex justify-content-end align-items-center">
                            <div class="form-group">
                                <label class="control-label"></label>
                                <div class="search__form">
                                    <form class="form-inline my-2 my-lg-0">
                                        <div class="input-wrapper">
                                            <input class="form-control mr-sm-2" type="search" placeholder="Tìm kiếm theo tên" aria-label="Search">
                                            <i class="fas fa-search"></i>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="content-table">
                        <thead>
                            <tr>
                                <th class="STT">STT</th>
                                <th class="ID_mon">Mã nguyên liệu</th>
                                <th class="Ten_mon">Tên nguyên liệu</th>
                                <th class="Gia">Giá nhập vào</th>
                                <th class="Number_mon">Số lượng còn lại</th>
                                <th class="Option">Tùy chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="STT">1</td>
                                <td class="ID_mon">100</td>
                                <td class="Ten_mon">Salad</td>
                                <td class="Gia">50.000 VNĐ</td>
                                <td class="Number_mon">10 kg</td>
                                <td class="Option">
                                    <i class="fas fa-eye"></i>
                                    <i class="fas fa-pencil-alt"></i>
                                    <i class="fas fa-ban"></i>
                                </td>
                            </tr>
                            <tr>
                                <td class="STT">2</td>
                                <td class="ID_mon">101</td>
                                <td class="Ten_mon">Thịt gà</td>
                                <td class="Gia">50.000 VNĐ</td>
                                <td class="Number_mon">120 kg</td>
                                <td class="Option">
                                    <i class="fas fa-eye"></i>
                                    <i class="fas fa-pencil-alt"></i>
                                    <i class="fas fa-ban"></i>
                                </td>
                            </tr>
                            <tr>
                                <td class="STT">3</td>
                                <td class="ID_mon">102</td>
                                <td class="Ten_mon">Đậu bắp</td>
                                <td class="Gia">50.000 VNĐ</td>
                                <td class="Number_mon">10 kg</td>
                                <td class="Option">
                                    <i class="fas fa-eye"></i>
                                    <i class="fas fa-pencil-alt"></i>
                                    <i class="fas fa-ban"></i>
                                </td>
                            </tr>
                            <tr>
                                <td class="STT">4</td>
                                <td class="ID_mon">105</td>
                                <td class="Ten_mon">Cà chua</td>
                                <td class="Gia">50.000 VNĐ</td>
                                <td class="Number_mon">10 kg</td>
                                <td class="Option">
                                    <i class="fas fa-eye"></i>
                                    <i class="fas fa-pencil-alt"></i>
                                    <i class="fas fa-ban"></i>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="page-pagination">
                        <div class="pagination">
                            <a href="#"><i class="fas fa-angle-double-left"></i></a>
                            <a href="#">1</a>
                            <a href="#" class="active">2</a>
                            <a href="#">3</a>
                            <a href="#">4</a>
                            <a href="#">5</a>
                            <a href="#">6</a>
                            <a href="#"><i class="fas fa-angle-double-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- Modal Add -->
    <div class="modal__ingredient-add">
        <div class="modal__ingredient-information">
            <div class="button__exit d-flex justify-content-end">
                <span class="exit__surround d-flex align-items-center justify-content-center">
                    <i class="fas fa-times"></i>
                </span>
            </div>
            <div class="modal__ingredient-details">
                <p class="modal__label-main">Thêm nguyên liệu</p>
                <div class="ingredient__name">
                    <p class="label">Tên nguyên liệu</p>
                    <input class="form-control mr-sm-2" type="search" placeholder="" aria-label="Search">
                </div>
                <div class="ingredient__price-categories d-flex justify-content-between">
                    <div class="ingredient__price col-5">
                        <p class="label">Đơn vị</p>
                        <div class="form__comboBoxList">
                            <form action="dropList" method="post">
                                <select name="combobox_Item">
                                    <option value="" selected>Tất cả</option>
                                    <option value="">Kg</option>
                                    <option value="">Gam</option>
                                    <option value="">Con</option>
                                    <option value="">Chai</option>
                                </select>
                            </form>
                        </div>
                    </div>
                    <div class="blank__area col-2"></div>
                    <div class="ingredient__categories col-5">
                        <p class="label">Đơn giá</p>
                        <input class="form-control mr-sm-2" type="search" placeholder="" aria-label="Search">
                    </div>
                </div>
                <div class="button__ingredient-add">
                    <button class="" type="submit">Thêm nguyên liệu</button>
                </div>
            </div>
        </div>
    </div>
    <!-- End Modal Add -->
    <!-- Modal Update -->
    <div class="modal__ingredient-modify">
        <div class="modal__ingredient-information">
            <div class="button__exit d-flex justify-content-end">
                <span class="exit__surround d-flex align-items-center justify-content-center">
                    <i class="fas fa-times"></i>
                </span>
            </div>
            <div class="modal__ingredient-details">
                <p class="modal__label-main">Thông tin nguyên liệu</p>
                <div class="ingredient__name">
                    <p class="label">Tên nguyên liệu</p>
                    <input class="form-control mr-sm-2" type="search" placeholder="" aria-label="Search">
                </div>
                <div class="ingredient__price-categories d-flex justify-content-between">
                    <div class="ingredient__price col-5">
                        <p class="label">Đơn vị</p>
                        <div class="form__comboBoxList">
                            <form action="dropList" method="post">
                                <select name="combobox_Item">
                                    <option value="" selected>Tất cả</option>
                                    <option value="">Kg</option>
                                    <option value="">Gam</option>
                                    <option value="">Con</option>
                                    <option value="">Chai</option>
                                </select>
                            </form>
                        </div>
                    </div>
                    <div class="blank__area col-2"></div>
                    <div class="ingredient__categories col-5">
                        <p class="label">Đơn giá</p>
                        <input class="form-control mr-sm-2" type="search" placeholder="" aria-label="Search">
                    </div>
                </div>
                <div class="button__ingredient-modify">
                    <button class="" type="submit">Cập nhật nguyên liệu</button>
                </div>
            </div>
        </div>
    </div>
    <!-- End Modal Update-->
    <!-- Modal Read -->
    <div class="modal__food-read">
        <div class="modal__read-information">
            <div class="button__exit d-flex justify-content-end">
                <span class="exit__surround d-flex align-items-center justify-content-center">
                    <i class="fas fa-times"></i>
                </span>
            </div>
            <div class="categories-read">
                <div class="categories__form-edit">
                    <p class="categories__text-specific">Thông tin nguyên liệu</p>
                    <div class="categories__information-label d-flex align-items-center">
                        <div class="categories__information-key col-md-4">
                            <p class="categories__text">Tên nguyên liệu:</p>
                            <p class="categories__text">Mã nguyên liệu:</p>
                            <p class="categories__text">Giá nhập:</p>
                        </div>
                        <div class="blank__area col-md-1">
                        </div>
                        <div class="categories__information-element col-md-4">
                            <p class="categories__text">Salad</p>
                            <p class="categories__text">100</p>
                            <p class="categories__text">50000 VNĐ/kg</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Modal Read -->
    <script src="~/js/manage-ingredient.js"></script>
</body>
