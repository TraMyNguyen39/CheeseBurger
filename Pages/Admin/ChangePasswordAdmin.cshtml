@page
@model ChangePasswordAdminModel
@{
	ViewData["Title"] = "ChangePassword";
}
<link rel="stylesheet" href="~/css/manage-account.css" asp-append-version="true" />

<div class="blank_area col-3"></div>
<div class="whole__information col-4">
	<div class="main__information">
		<div class="account__information d-flex justify-content-center">
			<p class="account__information-label">Đổi mật khẩu</p>
		</div>
		<div class="input__type">
			<p class="label">Nhập mật khẩu cũ:</p>
			<input class="form-control mr-sm-2" type="password" placeholder="" aria-label="Search">
		</div>

		<div class="input__type">
			<p class="label">Nhập mật khẩu mới:</p>
			<input class="form-control mr-sm-2" type="password" placeholder="" aria-label="Search">
		</div>

		<div class="input__type">
			<p class="label">Nhập lại mật khẩu mới:</p>
			<input class="form-control mr-sm-2" type="password" placeholder="" aria-label="Search">
		</div>

		<button class="submit-btn button__customer-save" type="submit">ĐỔI MẬT KHẨU</button>

		<div class="label__password-forget d-flex justify-content-center">
			<a class="nav-link forgetpass-link" href="">Quên mật khẩu</a>
		</div>
	</div>
</div>
<div class="blank_area col-3"></div>