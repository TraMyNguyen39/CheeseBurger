@page
@model ForgetPasswordModel
@{
    ViewData["Title"] = "Login/Register";
}

<div class="login-wrapper">
    <div class="form-box success-form-forget">
        <!-- Ke thua success page -->
        <a asp-page="/Index" class="logo-link">
            <img src="~/img/logo.png" alt="" class="logo-brand logo-brand-success">
        </a>
        @foreach (var i in Model.List_Account)
        {
            <small class="Ten_Email_All" style="display: none;">@i.Email</small>
        }
        <div class="login-form">
            <h2 class="text success-text">Quên mật khẩu</h2>
            <p class="text">
                Vui lòng nhập địa chỉ email đăng ký tài khoản.
                Chúng tôi sẽ gửi hướng dẫn và mật khẩu mới đến bạn.
            </p>
            <div class="unsuccessful-message" id="forget_pass_error"></div>
            <div class="input-item forget-password__input">
                <i class="fa-solid fa-envelope"></i>
                <input type="text" class="input-field" name="email" id="emaill" placeholder="Nhập Email" required>
            </div>
            <button class="home-btn btn-send-mail">Gửi email</button>
            <a asp-page="/Index" class="home-link"><i class="fa-solid fa-chevron-left"></i>Về trang chủ</a>
        </div>
    </div>
</div>
<script src="~/js/forget-password.js"></script>


