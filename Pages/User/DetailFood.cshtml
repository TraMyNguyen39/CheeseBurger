@page
@model DetailFoodModel
@{
	ViewData["Title"] = "Detail Food";
}

<div class="breadcrumb-division">
	<ol class="breadcrumb breadcrumb__edit">
		<li class="breadcrumb-item"><a asp-page="/Index">Trang chủ</a></li>
		<li class="breadcrumb-item"><a asp-page="/User/Menu">Thực đơn</a></li>
		<li class="breadcrumb-item active" aria-current="page">burger gà quay flavar</li>
	</ol>
</div>

<div class="row product">
	<div class="col-6 list-imgs">
		<div class="main-img">
			<img src="~/img/Burger-Flava.jpg" alt="">
		</div>
		<div class="list-more-imgs">
			<div class="more-img">
				<img src="~/img/Burger-Flava.jpg" alt="">
			</div>
			<div class="more-img">
				<img src="~/img/Burger-Flavar-4.png" alt="">
			</div>
			<div class="more-img">
				<img src="~/img/Burger-Flavar-4.png" alt="">
			</div>
			<div class="more-img">
				<img src="~/img/Burger-Flavar-4.png" alt="">
			</div>
		</div>
	</div>

	<div class="col-6 product-infor">
		<div class="product-detail">
			<h1 class="product-name pb-4">Burger gà quay flavar</h1>
			<p class="product-description pb-4">
				Gà quay Flavar kết hợp với bánh Hamburger và Salad tạo nên hương vị khó
				cưỡng.
			</p>
			<div class="product-category pb-4">
				<span>Danh mục: </span><a href="" class="product-category-name">Hamburger</a>
			</div>
			<div class="rating-infor d-flex pb-4">
				<div class="rating rating-edit">
					<input type="radio" name="star" id="star1"><label for="star1"></label>
					<input type="radio" name="star" id="star2"><label for="star2"></label>
					<input type="radio" name="star" id="star3"><label for="star3"></label>
					<input type="radio" name="star" id="star4"><label for="star4"></label>
					<input type="radio" name="star" id="star5"><label for="star5"></label>
				</div>
				<span class="numbersof-rating">(2 đánh giá)</span>
			</div>
			<p class="product-cost"><span>Giá: </span><span class="product-money">50,000VND</span></p>
		</div>
		<div class="product-shopping">
			<div class="product-cart">
				<div class="quantity">
					<span>Số lượng:</span>
					<div class="input-group__detail">
						<button class="minus-detail minus-plus-button">-</button>
						<input type="text" name="qty" id="detail-food-1" value="1" class="input-field">
						<button class="plus-detail minus-plus-button">+</button>
					</div>
				</div>
				<div class="submit-btn submit-btn__detail">
					<i class="fas fa-cart-shopping add-cart-icon"></i>
					Thêm vào giỏ hàng
				</div>
			</div>
		</div>
	</div>
</div>

<div class="review">
	<div class="review-label">
		Đánh giá <span class="numbersof-rating ml-0">(2)</span>
	</div>
	<div class="review-content">
		@for (var i = 0; i < 2; i++)
		{
			<div class="review-item">
				<img src="~/img/315935294_1667495190338863_6363304223474082833_n.jpg" alt="" class="reviewer-avt">
				<div class="reviewer">
					<p class="reviewer-name">Md.Arafat Hossion</p>
					<div class="rating rating-edit rating-review">
						<input type="radio" name="star" id="star6"><label for="star6"></label>
						<input type="radio" name="star" id="star7"><label for="star7"></label>
						<input type="radio" name="star" id="star8"><label for="star8"></label>
						<input type="radio" name="star" id="star9"><label for="star9"></label>
						<input type="radio" name="star" id="star10"><label for="sta10"></label>
					</div>
					<div class="list-reviewer-pics">
						<img src="~/img/4-eggtart.jpg" alt="" class="reviewer-pic">
						<img src="~/img/4-eggtart.jpg" alt="" class="reviewer-pic">
					</div>
					<p class="reviewer-descript">Món ăn thật sự rất tuyệt vời! Nhân viên phục vụ rất tận tình. Tôi sẽ quay lại!</p>
				</div>
			</div>
		}
	</div>
</div>

<script src="~/js/detail-food.js"></script>